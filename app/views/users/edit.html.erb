<div class = "container">
  <div class = "row">
    <div class = "col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto ">
    <h2>User info</h2>
    <% if @user.errors.any? %>error
     <ul>
     <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
     <% end %>
     </ul>
    <% end %>
      <%= form_with model:@user, url: user_path(@user.id), method: :patch do |f| %>
       <div class="form-group">
         <%= f.label :name, "name" %>
         <%= f.text_field :name %>
       </div>
       <div class ="form-group">
         <%= f.label :profile_image, "Image" %>
         <%= f.file_field :profile_image, accept: "image/*" %>
       </div>
       <div class = "form-group">
         <%= f.label :introduction, "Introduction" %>
         <%= f.text_area :introduction %>
       </div>
       <div class = "font-group">
         <%= f.submit 'Update User', class: 'btn btn-secondary' %>
       </div>
      <% end %>
    </div>
  </div>
</div>