<div class = "text-success">
 <%= flash[:notice] %>
</div>

<body>
 <div class="container px-5 px-sm-0">
  <div class="row">
   <div class="col-md-3">
    <h2>User info</h2>
     <table class = "table">
       <tbody>
        <tr>
            <%= image_tag @user.get_profile_image(100,100) %>
        </tr>
        <tr>
         <th>name</th>
         <th><%= @book_datail.user.name %></th>
        </tr>
        <tr>
         <th>introduction</th>
         <th><%= @book_datail.user.introduction %></th>
        </tr>
       </tbody>
     </table>
     <div class="row">
         <%= link_to "edit", edit_user_path(@user.id), class: 'btn btn-outline-secondary btn-block fa-solid fa-user-cog' %>
     </div>
     <%= render 'side', book: @book %>
   </div>

   <div class="col-md-8 offset-md-1">
       <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <tr>
              <td><%= link_to user_path(@user.id) do %>
                   <%= image_tag(@user.get_profile_image(100,100)) %><br>
                   <%= @book_datail.user.name %>
                  <% end %>
              </td>
              <td>
                  <%= link_to @book_datail.title %>
                  <%# bookのshowリンク %>
              </td>
              <td><%= @book_datail.body %>
              </td>
              <% if @user == current_user%>
              <td><%= link_to "Edit", edit_book_path(@book_datail.id), class: 'btn btn-sm btn-success' %></td>
              <td><%= link_to "Destroy", book_path(@book_datail.id), method: :delete, "data-confirm" => "本当に消しますか？", class: 'btn btn-sm btn-danger' %></td>
              <% end %>
            </tr>
          </tbody>
        </table>
   </div>
  </div>
 </div>
</body>
