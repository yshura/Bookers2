<body>
 <div class="container px-5 px-sm-0">
  <div class="row">
   <div class="col-md-3">
    <h2>User info</h2>
     <table>
       <tbody>
        <tr>
            <%= image_tag @user.get_profile_image(100,100) %>
        </tr>
        <tr>
         <th>name</th>
         <th><%= current_user.name %></th>
        </tr>
        <tr>
         <th>introduction</th>
         <th><%= current_user.introduction %></th>
        </tr>
       </tbody>
     </table>
     <div class="row">
         <%= link_to "edit", edit_user_path(@user.id) %>
     </div>



    <h2>New Book</h2>
    <%= form_with model:@book, url: '/books', method: :post do |f| %>
     <div class="form-group">
        <%= f.label :title, "Title" %>
        <%= f.text_field :title %>
     </div>
     <div class ="form-group">
        <%= f.label :body, "Opinion" %>
        <%= f.text_area :body %>
     </div>
     <div class= "form-group">
        <%=f.submit 'Create Book' %>
     </div>
    <% end %>
   </div>


   <div class="col-md-8 offset-md-1">
       <h2>Books</h2>
        <table>
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
              ã€€   <%=link_to image_tag('default-image.jpg'), user_path(@user.id) %>
              </td>

              <td>
                  <%= link_to book.title, book_path(book.id) %>
              </td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
   </div>
  </div>
 </div>
</body>