 <h2 class="mt-3">New book</h2>
    <%= form_with model:@book, url: '/books', method: :post do |f| %>

        <h4>Title</h4>
        <%= f.text_field :title %>

        <h4>Opinion</h4>
        <%= f.text_area :body %>

     <div class= "action">
        <%=f.submit 'Create Book', class: 'btn btn-success' %>
     </div>
    <% end %>