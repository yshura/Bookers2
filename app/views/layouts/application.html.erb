<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
     <link href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" rel="stylesheet">
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
         <a class="navbar-brand" href="/">
        <span>Bookers</span>
         </a>
         <div class="collapse navbar-collapse">
           <ul class="navbar-nav ml-auto">

            <li>
              <%= link_to "Home", root_path, class: 'nav-link text-light fa-solid fa-home' %>
            </li>
            <% if user_signed_in? %>
            <li>
              <%= link_to "Users", users_path, class: 'nav-link text-light fa-solid fa-users' %>
            </li>
            <li>
              <%= link_to "Books", books_path, class: 'nav-link text-light fa-solid fa-book-open' %>
            </li>
            <li>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: 'nav-link text-light fa-solid fa-sign-out-alt' %>
            </li>
            <% else %>
            <li>
              <%= link_to "About", about_path, class: 'nav-link text-light fa-solid fa-link' %>
            </li>
             <li>
              <%= link_to "Sign in", new_user_registration_path, class: 'nav-link text-light fa-solid fa-user-plus' %>
            </li>
            <li>
              <%= link_to "Log in", new_user_session_path, class: 'nav-link text-light fa-solid fa-sign-in-alt' %>
            </li>
            <% end %>
           </ul>
         </div>
        </div>
      </nav>
    </header>
    <%= yield %>

    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
